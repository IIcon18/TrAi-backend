# Database
DATABASE_URL=postgresql+asyncpg://USER:PASSWORD@db:5432/DB_NAME
POSTGRES_USER=trai_user
POSTGRES_PASSWORD=change-me-db-password
POSTGRES_DB=trai_db

# JWT
SECRET_KEY=change-me-secret-key
REFRESH_SECRET_KEY=change-me-refresh-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=your-minio-user
MINIO_SECRET_KEY=your-minio-password
MINIO_BUCKET=trai-attachments
MINIO_PUBLIC_URL=http://localhost:9000
MINIO_ROOT_USER=your-minio-user
MINIO_ROOT_PASSWORD=your-minio-password

# Redis
REDIS_URL=redis://redis:6379/0

# App
FRONTEND_BASE_URL=http://localhost:3000
RESET_DATABASE=false
